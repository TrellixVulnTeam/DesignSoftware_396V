<!-- breadcrumb part start-->
    <section class="breadcrumb_part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <h2>Lịch sử đặt hàng</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb part end-->

  <!--================ confirmation part start =================-->
  <section class="confirmation_part section_padding">
    
    <div class="container">
       {{#each result}}
       
      <div class="row">
        
        
        <div class="col-lg-12">
          <div class="order_details_iner">
            
          </div>
        </div>

      
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
            <h4>thông tin đơn hàng</h4>
            <ul>
              <li>
                <p>số điện thoại</p><span>: {{this.order._phonenumber}}</span>
              </li>
              <li>
                <p>ngày đặt hàng</p><span>: {{this.order._book}}</span>
              </li>
              <li>
                <p>tổng tiền</p><span>: VNĐ {{this.order._total}}</span>
              </li>
              <li>
                <p>trạng thái đơn hàng</p><span>: {{this.order._status}}</span>
              </li>
            </ul>
          </div>
        </div>
        
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
            <h4>thông tin địa chỉ giao hàng</h4>
            <ul>
              <li>
                <p>địa chỉ giao hàng</p><span>: {{this.order._address}}</span>
              </li>
              <li>
                <p>ghi chú khi nhận hàng</p><span>: {{this.order._note}}</span>
              </li>
              
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="order_details_iner">
            <h3>Chi tiết đơn hàng</h3>
            <table class="table table-borderless">
              <thead>
                <tr>
                  <th scope="col" colspan="2">Sản phẩm</th>
                  <th scope="col">Số lượng</th>
                  <th scope="col">Tổng tiền</th>
                </tr>
              </thead>
              <tbody>
                {{#each this.datas}}
                <tr>
                  <th colspan="2"><span>{{this._nameproduct}}</span></th>
                  <th>x0{{this._amount}}</th>
                  <th> <span>{{this._total}}₫</span></th>
                </tr>
                {{/each}}
               
                
                <tr>
                  <th colspan="3">Tổng tiền đơn hàng</th>
                  <th> <span>{{this.order._total}}₫</span></th>
                </tr>
                
              </tbody>
              
            </table>
          </div>
        </div>
      </div>
      
      {{/each}}
    </div>
  
   
  </section>
  <!--================ confirmation part end =================-->