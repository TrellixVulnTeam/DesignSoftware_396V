    <!--================login_part Area =================-->
    <section class="login_part section_padding ">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_text text-center">
                        <div class="login_part_text_iner">
                            <h2>Bạn chưa có tài khoản?</h2>
                            <p>Cửa hàng bán đồ truyền thống uy tín với hơn 15 năm kinh nghiệm</p>
                            <a href="/registration" class="btn_3">Tạo tài khoản</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_form">
                        <div class="login_part_form_iner">
                            <h3>Chào mừng ! <br>
                                Vui lòng đăng nhập</h3>
                            <form class="row contact_form"  method="post" novalidate="novalidate">
                                <div class="col-md-12 form-group p_star">
                                    <input type="text" class="form-control" id="name" name="username" 
                                        placeholder="Tên đăng nhập">
                                </div>
                                <div class="col-md-12 form-group p_star">
                                    <input type="password" class="form-control" id="name" name="password" 
                                        placeholder="Mật khẩu">
                                </div>
                                {{#if mess}}
                                <div class="col-md-12 form-group ">
                                    <label for="f-option2">{{mess}}</label>
                                </div>
                                {{else}}
                                {{/if}}
                                <div class="col-md-12 form-group">
                                    <div class="creat_account d-flex align-items-center">
                                        <input type="checkbox" id="f-option" name="selector">
                                        <label for="f-option">Lưu thông tin</label>
                                    </div>
                                    <button type="submit" value="submit" class="btn_3">
                                        đăng nhập
                                    </button>
                                    <a class="lost_pass" href="/forgetpassword">quên mật khẩu?</a>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================login_part end =================-->